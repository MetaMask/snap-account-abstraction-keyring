{
  "name": "@metamask/snap-account-abstraction-keyring-monorepo",
  "version": "0.3.0",
  "private": true,
  "description": "An account abstraction keyring snap that integrates with MetaMask accounts.",
  "keywords": [
    "metamask",
    "snap",
    "keyring",
    "account",
    "account abstraction",
    "4337"
  ],
  "homepage": "https://github.com/MetaMask/snap-account-abstraction-keyring#readme",
  "bugs": {
    "url": "https://github.com/MetaMask/snap-account-abstraction-keyring/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/MetaMask/snap-account-abstraction-keyring.git"
  },
  "license": "(MIT-0 OR Apache-2.0)",
  "author": "",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "yarn workspaces foreach --parallel --verbose --topological run build",
    "install:dapp": "yarn workspace @metamask/snap-account-abstraction-keyring-site install",
    "build:dapp": "yarn workspace @metamask/snap-account-abstraction-keyring-site build",
    "start:dapp": "yarn workspace @metamask/snap-account-abstraction-keyring-site start",
    "build:snap": "yarn workspace @metamask/snap-account-abstraction-keyring build",
    "build:docs": "typedoc",
    "postinstall": "yarn workspace @metamask/snap-account-abstraction-keyring compile",
    "lint": "yarn workspaces foreach --parallel --verbose run lint",
    "lint:deps": "yarn workspaces foreach --parallel --verbose run depcheck",
    "lint:eslint": "yarn workspaces foreach --parallel --verbose run lint:eslint",
    "lint:fix": "yarn workspaces foreach --parallel --verbose run lint:fix",
    "lint:misc": "yarn workspaces foreach --parallel --verbose run lint:misc",
    "lint:types": "yarn workspaces foreach --parallel --verbose run lint:types",
    "lint:changelog": "yarn workspaces foreach --parallel --verbose run lint:changelog",
    "lint:constraints": "yarn constraints",
    "lint:dependencies": "depcheck && yarn dedupe",
    "start": "yarn workspaces foreach --parallel --verbose --interlaced run start",
    "test": "yarn workspaces foreach --parallel --verbose run test",
    "install-chrome": "./scripts/install-chrome.sh"
  },
  "dependencies": {
    "postinstall": "^0.9.0"
  },
  "devDependencies": {
    "@babel/preset-typescript": "^7.23.3",
    "@jest/globals": "^29.7.0",
    "@lavamoat/allow-scripts": "^3.0.0",
    "@lavamoat/preinstall-always-fail": "^2.0.0",
    "@metamask/auto-changelog": "^3.4.4",
    "@metamask/eslint-config": "^12.2.0",
    "@metamask/eslint-config-jest": "^12.1.0",
    "@metamask/eslint-config-nodejs": "^12.1.0",
    "@metamask/eslint-config-typescript": "^12.1.0",
    "@types/jest": "^29.5.11",
    "@typescript-eslint/eslint-plugin": "^5.55.0",
    "@typescript-eslint/parser": "^5.55.0",
    "depcheck": "^1.4.6",
    "eslint": "^8.36.0",
    "eslint-config-prettier": "^8.7.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jest": "^27.2.1",
    "eslint-plugin-jsdoc": "^40.0.3",
    "eslint-plugin-n": "^16.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.1.1",
    "jest": "^29.7.0",
    "prettier": "^2.8.4",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typedoc": "^0.23.15",
    "typescript": "^4.9.5"
  },
  "packageManager": "yarn@3.2.1",
  "engines": {
    "node": "^18.18 || >=20"
  },
  "lavamoat": {
    "allowScripts": {
      "@lavamoat/preinstall-always-fail": false,
      "ts-node>@swc/core": false,
      "$root$": false
    }
  }
}
